<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/marginHorizontal"
    android:layout_marginEnd="@dimen/marginHorizontal"
    android:orientation="vertical"
    tools:context=".ui.balance.BalanceFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/balance_adres_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Адрес" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/balance_show_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Показать"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:textColor="@color/whiteColor" />

</LinearLayout>